{
  "build": {
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build",
    "devPath": "http://localhost:1420",
    "distDir": "../.next"
  },
  "package": {
    "productName": "ReaderAI",
    "version": "0.1.0"
  },
  "tauri": {
    "windows": [
      {
        "label": "main",
        "title": "ReaderAI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "resizable": true
      }
    ],
    "allowlist": {
      "notification": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://api.openai.com/*", "https://**"]
      },
      "window": {
        "all": true,
        "startDragging": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "scope": ["$DOCUMENT/**", "$APPDATA/**"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [],
        "sidecar": false
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.readerai.app",
      "targets": "all"
    },
    "security": {
      "dangerousRemoteDomainIpcAccess": [
        {
          "domain": "localhost",
          "windows": ["main"],
          "plugins": ["event"],
          "scheme": "all",
          "enableTauriAPI": true
        }
      ]
    },
    "updater": {
      "active": false
    }
  }
}
